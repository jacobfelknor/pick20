// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-docker-compose
{
	"name": "Pick 20 Dev Containers",
	// Update the 'dockerComposeFile' list if you have more compose files or use different names.
	// The .devcontainer/docker-compose.yml file contains any overrides you need/want to make.
	"dockerComposeFile": [
		"../docker-compose.yml",
		"docker-compose.yml"
	],
	// The 'service' property is the name of the service for the container that VS Code should
	// use. Update this value and .devcontainer/docker-compose.yml to the real service name.
	"service": "pick20-server",
	// The optional 'workspaceFolder' property is the path VS Code should open by default when
	// connected. This should match where you mount the source code in docker-compose.yml
	"workspaceFolder": "/home/workdir",
	// Add the IDs of extensions you want installed when the container is created.
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},
	"mounts": [
		"type=bind,source=/home/${localEnv:USER}/.ssh,target=/home/pick20/.ssh,readonly"
	],
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		// 3000,
		8000,
		"pick20-db:5432"
	],
	"portsAttributes": {
		"pick20-db:5432": {
			"label": "Dev PostgreSQL Server"
		},
		"8000": {
			"label": "Pick 20 Django Server"
		}
	},
	// Uncomment the next line if you want start specific services in your Docker Compose config.
	// "runServices": [],
	// Uncomment the next line if you want to keep your containers running after VS Code shuts down.
	// "shutdownAction": "none",
	// Uncomment the next line to run commands after the container is created.
	"postCreateCommand": "pick20/init-dev.sh",
	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"settings": {
				"python.defaultInterpreterPath": "${containerWorkspaceFolder}/.venv/bin/python"
			},
			"extensions": [
				"batisteo.vscode-django",
				"eamodio.gitlens",
				"ms-python.vscode-pylance",
				"ms-python.python",
				"charliermarsh.ruff",
				"ms-vscode-remote.vscode-remote-extensionpack",
				"streetsidesoftware.code-spell-checker",
				"tamasfe.even-better-toml",
				"grapecity.gc-excelviewer",
				"ms-azuretools.vscode-docker",
				"analytic-signal.preview-pdf",
			]
		}
	},
	// Uncomment to connect as an existing user other than the container default. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "pick20",
	"remoteEnv": {
		// #### LOCAL "SECRETS" ####
		"DJANGO_SECRET_KEY_LOCAL": "super_secret_key_for_local_development",
		// These must match the docker compose file. Don't change unless you have a good reason to
		"PSQL_USER_LOCAL": "admin",
		"PSQL_PASSWORD_LOCAL": "pick20",
		"MINIO_ACCESS_KEY_LOCAL": "admin",
		"MINIO_SECRET_KEY_LOCAL": "pick20"
	}
}